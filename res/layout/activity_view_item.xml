<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewItem" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" android:layout_below="@+id/enterItemText" android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button"
        android:onClick="addItemNow"
        android:layout_below="@+id/editText1" android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" android:layout_below="@+id/button1">
    </ListView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Enter a new todo item below:"
            android:id="@+id/enterItemText" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:clickable="false" android:textStyle="bold" android:textSize="20dp"/>

</RelativeLayout>
